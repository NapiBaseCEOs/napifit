<?xml version="1.0" encoding="utf-8"?>
<!-- Orange gradient button -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#EA580C"
                android:endColor="#C2410C"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/fitness_orange"
                android:endColor="#EA580C"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
