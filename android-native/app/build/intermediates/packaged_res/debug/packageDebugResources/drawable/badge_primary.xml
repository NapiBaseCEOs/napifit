<?xml version="1.0" encoding="utf-8"?>
<!-- Badge - rounded-full with primary color -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_500_10" />
            <corners android:radius="999dp" />
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/primary_500_40" />
            <corners android:radius="999dp" />
        </shape>
    </item>
</layer-list>
