<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:padding="16dp">

        <!-- Float Animation Circles -->
        <View
            android:id="@+id/float_circle_1"
            android:layout_width="288dp"
            android:layout_height="288dp"
            android:background="@drawable/float_circle_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="-144dp"
            android:layout_marginTop="64dp" />

        <View
            android:id="@+id/float_circle_2"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:background="@drawable/float_circle_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="-160dp"
            android:layout_marginBottom="64dp" />

        <!-- Radial Gradient Overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radial_gradient_overlay" />

        <!-- Reset Password Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/reset_password_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"
            android:background="@drawable/login_card_background"
            app:cardBackgroundColor="@color/bg_gray_900_90"
            app:cardCornerRadius="24dp"
            app:cardElevation="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border_gray_800_60">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/badge_primary"
                    app:cardBackgroundColor="@color/primary_500_10"
                    app:cardCornerRadius="999dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/primary_500_40">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/badge_dot"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YENİ ŞİFRE"
                            android:textColor="@color/primary_200"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.3" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yeni Şifre Belirle"
                    android:textColor="@color/text_primary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yeni şifrenizi girin"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="32dp" />

                <!-- Error Message -->
                <TextView
                    android:id="@+id/error_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/error_message_background"
                    android:padding="16dp"
                    android:textColor="@color/error"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Success Message -->
                <TextView
                    android:id="@+id/success_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/success_message_background"
                    android:padding="16dp"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:text="✅ Şifre başarıyla güncellendi! Giriş sayfasına yönlendiriliyorsunuz..."
                    android:layout_marginBottom="16dp" />

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Yeni Şifre"
                    android:layout_marginBottom="16dp"
                    app:hintTextColor="@color/text_secondary"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@color/bg_gray_800_50"
                    app:boxStrokeColor="@color/border_gray_700"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:inputType="textPassword"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="16sp"
                        android:background="@drawable/input_field"
                        android:hint="En az 6 karakter" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Şifre Tekrar"
                    android:layout_marginBottom="24dp"
                    app:hintTextColor="@color/text_secondary"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@color/bg_gray_800_50"
                    app:boxStrokeColor="@color/border_gray_700"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:inputType="textPassword"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="16sp"
                        android:background="@drawable/input_field"
                        android:hint="Şifreyi tekrar girin" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Reset Password Button -->
                <Button
                    android:id="@+id/btn_reset_password"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Şifreyi Güncelle"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:elevation="8dp"
                    android:stateListAnimator="@null" />

                <!-- Loading Indicator -->
                <ProgressBar
                    android:id="@+id/loading_indicator"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/primary" />

                <!-- Back Link -->
                <TextView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:text="← Geri"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

