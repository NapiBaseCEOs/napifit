<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Compact Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/card_header"
                app:cardBackgroundColor="@color/bg_gray_900_90"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border_gray_800_60">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAÄžLIK PANELÄ°"
                            android:textColor="@color/primary_300_text"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.3"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/welcome_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HoÅŸ geldiniz!"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Compact BMI Badge -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/bmi_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/bg_gray_900_90"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/border_gray_800_60">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BMI"
                                android:textColor="@color/text_secondary"
                                android:textSize="9sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/bmi_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22.5"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Compact Stats Grid - 3 columns -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:layout_marginBottom="12dp">

                <!-- Weight Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_weight"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/bg_gray_900_80"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/border_gray_800_70">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KÄ°LO"
                            android:textColor="@color/text_secondary"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/weight_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
