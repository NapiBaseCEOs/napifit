<?xml version="1.0" encoding="utf-8"?>
<!-- Primary gradient button (green) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/primary_600"
                android:endColor="@color/primary_700"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_700" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/primary_500"
                android:centerColor="@color/primary_600"
                android:endColor="@color/fitness_green"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
