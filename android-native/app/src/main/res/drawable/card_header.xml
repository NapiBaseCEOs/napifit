<?xml version="1.0" encoding="utf-8"?>
<!-- Header card - rounded-3xl (24dp) with elevated style -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_gray_900_80" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/border_gray_800_70" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
