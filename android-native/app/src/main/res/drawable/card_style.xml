<?xml version="1.0" encoding="utf-8"?>
<!-- Card style - rounded-2xl (24dp), border, background opacity -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with opacity -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_gray_900_90" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/border_gray_800_60" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
