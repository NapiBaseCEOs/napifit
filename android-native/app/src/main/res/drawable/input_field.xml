<?xml version="1.0" encoding="utf-8"?>
<!-- Input field - rounded-lg (12dp) with border -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/bg_gray_800_50" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="@color/primary_500" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default state -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/bg_gray_800_50" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/border_gray_700" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
