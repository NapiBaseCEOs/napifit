<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Text Appearance -->
    <style name="TextAppearance.App" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Text Styles - Web sitesiyle uyumlu -->
    
    <!-- Headers -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.App">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.Headline2" parent="TextAppearance.App">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.Headline3" parent="TextAppearance.App">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Card Titles -->
    <style name="TextAppearance.App.CardTitle" parent="TextAppearance.App">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.3</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Values -->
    <style name="TextAppearance.App.ValueLarge" parent="TextAppearance.App">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.ValueMedium" parent="TextAppearance.App">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Labels -->
    <style name="TextAppearance.App.Label" parent="TextAppearance.App">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Body Text -->
    <style name="TextAppearance.App.Body1" parent="TextAppearance.App">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.Body2" parent="TextAppearance.App">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Button Text -->
    <style name="TextAppearance.App.Button" parent="TextAppearance.App">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Badge Text -->
    <style name="TextAppearance.App.Badge" parent="TextAppearance.App">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textColor">@color/primary_400_text</item>
    </style>
</resources>

