<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:padding="16dp">

        <!-- Float Animation Circles -->
        <View
            android:id="@+id/float_circle_1"
            android:layout_width="288dp"
            android:layout_height="288dp"
            android:background="@drawable/float_circle_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="-144dp"
            android:layout_marginTop="64dp" />

        <View
            android:id="@+id/float_circle_2"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:background="@drawable/float_circle_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="-160dp"
            android:layout_marginBottom="64dp" />

        <!-- Radial Gradient Overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radial_gradient_overlay" />

        <!-- Verify Code Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/verify_code_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"
            android:background="@drawable/login_card_background"
            app:cardBackgroundColor="@color/bg_gray_900_90"
            app:cardCornerRadius="24dp"
            app:cardElevation="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border_gray_800_60">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center_horizontal">

                <!-- Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/badge_primary"
                    app:cardBackgroundColor="@color/blue_500_20"
                    app:cardCornerRadius="999dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/blue_500_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/badge_dot_blue"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KOD DOĞRULAMA"
                            android:textColor="@color/blue_400_text"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.3" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kodu Girin"
                    android:textColor="@color/text_primary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@example.com"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="32dp" />

                <!-- Error Message -->
                <TextView
                    android:id="@+id/error_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/error_message_background"
                    android:padding="16dp"
                    android:textColor="@color/error"
                    android:textSize="14sp"
                    android:layout_marginBottom="24dp" />

                <!-- Code Inputs -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/code_input_1"
                        android:layout_width="48dp"
                        android:layout_height="64dp"
                        android:maxLength="1"
                        android:inputType="number"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary"
                        android:background="@drawable/code_input_background"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/code_input_2"
                        android:layout_width="48dp"
                        android:layout_height="64dp"
                        android:maxLength="1"
                        android:inputType="number"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary"
                        android:background="@drawable/code_input_background"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/code_input_3"
                        android:layout_width="48dp"
                        android:layout_height="64dp"
                        android:maxLength="1"
                        android:inputType="number"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary"
                        android:background="@drawable/code_input_background"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/code_input_4"
                        android:layout_width="48dp"
                        android:layout_height="64dp"
                        android:maxLength="1"
                        android:inputType="number"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary"
                        android:background="@drawable/code_input_background"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/code_input_5"
                        android:layout_width="48dp"
                        android:layout_height="64dp"
                        android:maxLength="1"
                        android:inputType="number"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary"
                        android:background="@drawable/code_input_background"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/code_input_6"
                        android:layout_width="48dp"
                        android:layout_height="64dp"
                        android:maxLength="1"
                        android:inputType="number"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary"
                        android:background="@drawable/code_input_background" />
                </LinearLayout>

                <!-- Verify Button -->
                <Button
                    android:id="@+id/btn_verify"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Kodu Doğrula"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_blue"
                    android:elevation="8dp"
                    android:stateListAnimator="@null"
                    android:layout_marginBottom="16dp" />

                <!-- Loading Indicator -->
                <ProgressBar
                    android:id="@+id/loading_indicator"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/primary" />

                <!-- Resend Code -->
                <TextView
                    android:id="@+id/resend_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/btn_resend_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Kodu Tekrar Gönder"
                    android:textColor="@color/primary_400_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginBottom="16dp" />

                <!-- Back Link -->
                <TextView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="← Geri"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

