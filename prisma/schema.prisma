generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?   // Tam ad (Google OAuth için geriye dönük uyumluluk)
  firstName     String?   // Ad
  lastName      String?   // Soyad
  dateOfBirth   DateTime? // Doğum tarihi
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Kullanıcı profil bilgileri
  height            Float?   // Boy (cm)
  weight            Float?   // Kilo (kg)
  age               Int?     // Yaş
  gender            String?   // Cinsiyet (male, female, other)
  targetWeight      Float?   // Hedef kilo (kg)
  dailySteps        Int?     // Günlük ortalama adım sayısı
  activityLevel     String?   // Aktivite seviyesi (sedentary, light, moderate, active, very_active)
  onboardingCompleted Boolean @default(false) // Onboarding tamamlandı mı?
  
  // Sağlık takibi
  healthMetrics     HealthMetric[]  // Sağlık metrikleri
  workouts          Workout[]       // Egzersiz kayıtları
  meals             Meal[]          // Yemek kayıtları
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @map("refreshToken")
  access_token      String?  @map("accessToken")
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model HealthMetric {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  weight      Float?   // Kilo (kg)
  bodyFat     Float?   // Vücut yağ yüzdesi
  muscleMass  Float?   // Kas kütlesi (kg)
  water       Float?   // Su yüzdesi
  bmi         Float?   // BMI
  notes       String?  // Notlar
  
  createdAt   DateTime @default(now())
  
  @@index([userId, createdAt])
}

model Workout {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name        String   // Egzersiz adı
  type        String   // Egzersiz tipi (cardio, strength, flexibility, etc.)
  duration    Int?     // Süre (dakika)
  calories    Float?   // Yakılan kalori
  distance    Float?   // Mesafe (km) - koşu, yürüyüş için
  notes       String?  // Notlar
  
  createdAt   DateTime @default(now())
  
  @@index([userId, createdAt])
}

model Meal {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Yemek bilgileri
  imageUrl    String?  // Çekilen fotoğraf URL'i
  foods       Json     // AI tarafından tanınan yiyecekler (array)
  totalCalories Float  // Toplam kalori
  mealType    String?  // Öğün tipi (breakfast, lunch, dinner, snack)
  notes       String?  // Kullanıcı notları
  recommendations Json? // AI önerileri (shouldEat, avoid, tips)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId, createdAt])
}

